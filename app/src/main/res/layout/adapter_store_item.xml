<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/adapter_store_item_fl_container"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/adapter_store_item_iv_store_image"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/adapter_store_item_tv_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/normal_padding"
            android:paddingRight="@dimen/normal_padding"
            android:paddingTop="@dimen/short_padding"
            android:text="Store Name"
            android:textStyle="bold"
            android:textColor="@color/primaryText"/>

        <TextView
            android:id="@+id/adapter_store_item_tv_store_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/normal_padding"
            android:paddingRight="@dimen/normal_padding"
            android:paddingBottom="@dimen/normal_padding"
            android:text="Store Desc"
            android:textColor="@color/secondaryText"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>
</FrameLayout>